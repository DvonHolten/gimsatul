#!/bin/sh
usage () {
cat<<EOF
usage: configure [ <option> ... ]

where '<option>' is one of the following:

-c     enable assertion checking even without '-g'
-g     debugging compile (implies '-c', '-l' and '-s')
-h     print this command line option summary
-l     include logging code even without '-g'
-s     add symbol table even without '-g'

-f...         passed to compiler (for instance '-fsanitize=address,undefined')
-m32          enforce 32-bit compilation (also implies '-mpc64')
EOF
exit 1
}
compact=yes
debug=no
symbols=no
logging=no
check=no
options=""
die () {
  echo "configure: error: $*" $* 1>&2
  exit 1
}
while [ $# -gt 0 ]
do
  case "$1" in
    -c) check=yes;;
    -f*) options="$options $1";;
    -m32) options="$options $1 -mpc64";;
    -g) debug=yes;;
    -h) usage; exit 0;;
    -l) logging=yes;;
    -s) symbols=yes;;
    *)  die "invalid option '$1' (try '-h')";;
  esac
  shift
done
[ "$CC" = "" ] && CC=gcc
CFLAGS="-Wall$options"
[ $debug = yes ] && check=yes
[ $debug = yes ] && symbols=yes
[ $debug = yes ] && logging=yes
[ $debug = no ] && CFLAGS="$CFLAGS -O3"
[ $symbols = yes ] && CFLAGS="$CFLAGS -ggdb3"
[ $check = no ] && CFLAGS="$CFLAGS -DNDEBUG"
[ $logging = yes ] && CFLAGS="$CFLAGS -DLOGGING"
echo "configure: $CC $CFLAGS"
rm -f makefile
sed -e "s#@CC@#$CC#;s#@CFLAGS@#$CFLAGS#" makefile.in > makefile
echo "configure: generated 'makefile'"
